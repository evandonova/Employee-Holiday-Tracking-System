@model UserDetailsBaseFormModel

@{
    ViewData["Title"] = "View Supervisor";
}

<form method="post">
    <div class="row">

        <h4>Employee Details</h4>

        <input asp-for="Id" type="hidden">

        <div class="col-5">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control col-1">
            <span asp-validation-for="FirstName" class="small text-danger"></span>

            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control col-1">
            <span asp-validation-for="LastName" class="small text-danger"></span>

            <input asp-area="Admin" asp-controller="Supervisors" asp-action="Edit" class="btn btn-primary" type="submit" value="Edit Supervisor" />
            <input asp-area="Admin" asp-controller="Supervisors" asp-action="Delete" class="btn btn-primary" type="submit" value="Delete Supervisor" />
        </div>

        <div class="col-5">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control col-1">
            <span asp-validation-for="Email" class="small text-danger"></span>

            <label>Change Password</label>
            <input asp-for="NewPassword" class="form-control col-1" type="password" placeholder="New Password">
            <span asp-validation-for="NewPassword" class="small text-danger"></span>

            <label>Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control col-1" type="password" placeholder="Confirm New Password">
            <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
