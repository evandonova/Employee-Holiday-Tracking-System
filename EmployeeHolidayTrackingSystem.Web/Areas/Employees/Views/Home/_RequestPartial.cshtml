@model List<RequestViewModel>

@{
    var className = ViewData["class"];
}

@foreach (var request in Model)
{
    <tr class="@className">
        <td>@request.StartDate</td>
        <td>@request.EndDate</td>
        <td>@request.Status</td>
        <td>
            <a asp-area="Employees" asp-controller="Requests" asp-action="Details" asp-route-id="@request.Id"
               class="btn btn-primary">View Request</a>
        </td>
    </tr>
}
