@model RequestFormModel

@{
    ViewData["Title"] = "Create Request Page";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-3" style="width: 25%">

        <h4>Request a holiday</h4>
        <p>Choose start and end dates from the calendar on the right.</p>

        <form method="post">
            <label asp-for="StartDate"></label>
            <input id="startDay" asp-for="StartDate" class="form-control col-1" readonly>
            <span asp-validation-for="StartDate" class="small text-danger"></span>

            <label asp-for="EndDate"></label>
            <input id="endDay" asp-for="EndDate" class="form-control col-1" readonly>
            <span asp-validation-for="EndDate" class="small text-danger"></span>

            <button id="clearBtn" type="button" class="btn btn-primary mt-3">Clear</button>
            <input class="btn btn-success mt-3" type="submit" value="Request" />
        </form>
    </div>

    @await Html.PartialAsync("~/Areas/Shared/Views/_CalendarPartial.cshtml")
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>

    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        var dateToday = new Date();
        createCalendar(dateToday);
    </script>
}

