@model EmployeeRequestViewModel

@{
    ViewData["Title"] = "View Request Details";
}

<div class="row">
    <div class="col-3" style="width: 25%">

        <h4>Holiday Request Details</h4>

        <label asp-for="StartDate"></label>
        <input id="startDayFixed" asp-for="StartDate" class="form-control col-1" readonly>

        <label asp-for="EndDate"></label>
        <input id="endDayFixed" asp-for="EndDate" class="form-control col-1" readonly>

        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control col-1" readonly>

        @if (!String.IsNullOrEmpty(Model.DisapprovalStatement))
        {
            <label asp-for="DisapprovalStatement"></label>
            <input asp-for="DisapprovalStatement" class="form-control col-1" readonly>
        }
    </div>

    @await Html.PartialAsync("~/Views/Shared/_CalendarPartial.cshtml")
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        var dateToday = new Date();
        var startDate = document.getElementById("startDayFixed").value;
        var endDate = document.getElementById("endDayFixed").value;
        createCalendar(dateToday, null, startDate, endDate);
    </script>
}