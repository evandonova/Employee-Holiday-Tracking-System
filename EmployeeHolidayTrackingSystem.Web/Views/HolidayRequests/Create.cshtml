@model HolidayRequestModel

@{
    ViewData["Title"] = "Create Request Page";
}

<div class="row">
    <div class="col-3" style="width: 25%">

        <h4>Request a holiday</h4>
        <p>Choose start and end days from the calendar on the right.</p>

        <form method="post">
            <label asp-for="StartDate"></label>
            <input id="startDay" asp-for="StartDate" class="form-control col-1" readonly>
            <span asp-validation-for="StartDate" class="small text-danger"></span>

            <label asp-for="EndDate"></label>
            <input id="endDay" asp-for="EndDate" class="form-control col-1" readonly>
            <span asp-validation-for="EndDate" class="small text-danger"></span>

            <button id="clearBtn" type="button" class="btn btn-primary mt-3">Clear</button>
            <input class="btn btn-success mt-3" type="submit" value="Request" />
        </form>
    </div>

    <div class="content-wrapper lighten-3 col-8">
        <div class="calendar-wrapper z-depth-2">

            <div class="header-background">
                <div class="calendar-header">
                    <a class="prev-button" id="prev">
                        <i class="material-icons">keyboard_arrow_left</i>
                    </a>
                    <a class="next-button" id="next">
                        <i class="material-icons">keyboard_arrow_right</i>
                    </a>
                    <div class="row header-title">

                        <div class="header-text">
                            <h3 id="month-name">July</h3>
                            <h5 id="todayDayName">Today is Monday 31 July</h5>
                        </div>

                    </div>
                </div>
            </div>

            <div class="calendar-content">
                <div id="calendar-table" class="calendar-cells">
                    <div id="table-header">
                        <div class="row">
                            <div class="col">Mon</div>
                            <div class="col">Tue</div>
                            <div class="col">Wed</div>
                            <div class="col">Thu</div>
                            <div class="col">Fri</div>
                            <div class="col">Sat</div>
                            <div class="col">Sun</div>
                        </div>
                    </div>

                    <div id="table-body" class="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

